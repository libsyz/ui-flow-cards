<div class="border rounded pt-4 px-4 mb-5" data-code=<%= "#{section_name}_#{number}" %> >
    <a class="btn btn-secondary btn-sm rounded float-right"
         tabindex="0" data-trigger="focus"
         data-toggle="popover" data-placement="top"
         data-clipboard-target=<%= "[data-code=\"#{section_name}_#{number}\"]" %> data-content="Copied!"> <small> Copy </small> </a>

    <%= markdown(code_snippet) %>
</div>
